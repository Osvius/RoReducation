<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <p class="alert alert-danger"><%= message %></p>
  <% end %>
<% end %>
<%= form_with(model: @user, local:true) do |form| %>
  <table>
    <tr>
      <td><%= form.label :email %></td>
      <td><%= form.text_field :email %></td>
    </tr>
    <tr>
      <td><%= form.label :password %></td>
      <td><%= form.password_field :password %></td>
    </tr>
    <tr>
      <td><%= form.label :password_confirmation, "Repeat password" %></td>
      <td><%= form.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td><%= form.submit "Sign Up" %></td>
    </tr>
  </table>
<% end %>